      // Favorite Toggle Functionality
      document.querySelectorAll(".recipe-favorite").forEach((icon) => {
        icon.addEventListener("click", function () {
          this.classList.toggle("far");
          this.classList.toggle("fas");
          this.classList.toggle("active");
        });
      });

      // Search Functionality
      const searchInput = document.getElementById("search-input");
      const searchButton = document.getElementById("search-button");
      const searchResults = document.getElementById("search-results");
      const searchResultsContainer = document.getElementById("search-results-container");
      const allRecipesGrid = document.getElementById("all-recipes-grid");

      searchButton.addEventListener("click", function() {
        performSearch();
      });

      searchInput.addEventListener("keypress", function(e) {
        if (e.key === "Enter") {
          performSearch();
        }
      });

      function performSearch() {
        const query = searchInput.value.trim().toLowerCase();
        
        if (query) {
          // Hide all recipes grid
          allRecipesGrid.style.display = 'none';
          
          // Show search results section
          searchResults.style.display = 'block';
          
          // Filter recipes based on query
          const filteredRecipes = Object.keys(recipesData).filter(recipeId => {
            const recipe = recipesData[recipeId];
            return (
              recipe.title.toLowerCase().includes(query) ||
              recipe.origin.toLowerCase().includes(query) ||
              recipe.description.toLowerCase().includes(query)
            );
          });
          
          // Display search results
          if (filteredRecipes.length > 0) {
            let resultsHTML = '<div class="recipes-grid">';
            
            filteredRecipes.forEach(recipeId => {
              const recipe = recipesData[recipeId];
              resultsHTML += `
                <div class="recipe-card" data-id="${recipeId}">
                  <img src="${recipe.image.replace('600x400', '300x200')}" alt="${recipe.title}" class="recipe-image" />
                  <div class="recipe-content">
                    <h3 class="recipe-title">${recipe.title}</h3>
                    <p class="recipe-origin">${recipe.origin}</p>
                    <div class="recipe-meta">
                      <div class="recipe-rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="${recipe.rating === 5 ? 'fas' : recipe.rating >= 4.5 ? 'fas fa-star-half-alt' : 'far'} fa-star"></i>
                        <span>(${recipe.rating}/5)</span>
                      </div>
                      <i class="far fa-heart recipe-favorite"></i>
                    </div>
                    <p class="recipe-description">${recipe.description}</p>
                    <div class="recipe-actions">
                      <button class="btn btn-primary view-recipe">Lihat Resep</button>
                      <button class="btn btn-secondary save-recipe">Simpan</button>
                    </div>
                  </div>
                </div>
              `;
            });
            
            resultsHTML += '</div>';
            searchResultsContainer.innerHTML = resultsHTML;
            
            // Add event listeners to new recipe cards
            document.querySelectorAll('#search-results .view-recipe').forEach(button => {
              button.addEventListener('click', function() {
                const recipeCard = this.closest('.recipe-card');
                const recipeId = recipeCard.getAttribute('data-id');
                showRecipeDetail(recipeId);
              });
            });
            
            document.querySelectorAll('#search-results .save-recipe').forEach(button => {
              button.addEventListener('click', function() {
                const recipeCard = this.closest('.recipe-card');
                const recipeId = recipeCard.getAttribute('data-id');
                saveRecipe(recipeId);
              });
            });
          } else {
            searchResultsContainer.innerHTML = `
              <div class="no-results">
                <h3>Tidak ada hasil ditemukan untuk "${query}"</h3>
                <p>Coba gunakan kata kunci yang berbeda atau periksa ejaan Anda.</p>
              </div>
            `;
          }
        } else {
          // If search query is empty, show all recipes
          allRecipesGrid.style.display = 'grid';
          searchResults.style.display = 'none';
        }
      }

      // Add Recipe Button
      document
        .querySelector(".btn-large")
        .addEventListener("click", function () {
          alert(
            "Fitur tambah resep akan membuka form untuk mengunggah resep baru"
          );
        });

      // View Recipe Detail
      document.querySelectorAll('.view-recipe').forEach(button => {
        button.addEventListener('click', function() {
          const recipeCard = this.closest('.recipe-card');
          const recipeId = recipeCard.getAttribute('data-id');
          showRecipeDetail(recipeId);
        });
      });

      // View Article Detail
      document.querySelectorAll('.view-article').forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          const articleCard = this.closest('.article-card');
          const articleId = articleCard.getAttribute('data-id');
          showArticleDetail(articleId);
        });
      });

      // Back to Recipes
      document.getElementById('back-to-recipes').addEventListener('click', function(e) {
        e.preventDefault();
        document.querySelectorAll('.page-section').forEach(page => {
          page.classList.remove('active');
        });
        document.getElementById('resep').classList.add('active');
        
        // Update navigation
        document.querySelectorAll('.nav-link').forEach(link => {
          link.classList.remove('active');
        });
        document.querySelector('.nav-link[data-page="resep"]').classList.add('active');
      });

      // Back to Articles
      document.getElementById('back-to-articles').addEventListener('click', function(e) {
        e.preventDefault();
        document.querySelectorAll('.page-section').forEach(page => {
          page.classList.remove('active');
        });
        document.getElementById('artikel').classList.add('active');
        
        // Update navigation
        document.querySelectorAll('.nav-link').forEach(link => {
          link.classList.remove('active');
        });
        document.querySelector('.nav-link[data-page="artikel"]').classList.add('active');
      });

      // Save Recipe Functionality
      document.querySelectorAll('.save-recipe').forEach(button => {
        button.addEventListener('click', function() {
          const recipeCard = this.closest('.recipe-card');
          const recipeId = recipeCard.getAttribute('data-id');
          saveRecipe(recipeId);
        });
      });

      // Function to show recipe detail
      function showRecipeDetail(recipeId) {
        const recipe = recipesData[recipeId];
        if (!recipe) return;
        
        const recipeDetailContent = document.getElementById('recipe-detail-content');
        const commentsData = getCommentsData();
        const comments = commentsData[recipeId] || [];
        
        recipeDetailContent.innerHTML = `
          <div class="recipe-detail">
            <div class="recipe-detail-header">
              <img src="${recipe.image}" alt="${recipe.title}" class="recipe-detail-image">
              <div class="recipe-detail-info">
                <h1 class="recipe-detail-title">${recipe.title}</h1>
                <p class="recipe-detail-origin">${recipe.origin}</p>
                <div class="recipe-detail-meta">
                  <div><i class="fas fa-star" style="color: #ffc107;"></i> ${recipe.rating}/5</div>
                  <div><i class="fas fa-clock"></i> 60-90 menit</div>
                  <div><i class="fas fa-utensils"></i> 4-6 porsi</div>
                </div>
                <p>${recipe.description}</p>
              </div>
            </div>
            <div class="recipe-detail-content">
              <div class="ingredients-section">
                <h3>Bahan-bahan</h3>
                <ul class="ingredients-list">
                  ${recipe.ingredients.map(ingredient => `<li>${ingredient}</li>`).join('')}
                </ul>
              </div>
              <div class="steps-section">
                <h3>Cara Membuat</h3>
                <ol class="steps-list">
                  ${recipe.steps.map(step => `<li>${step}</li>`).join('')}
                </ol>
              </div>
            </div>
          </div>
          
          <!-- Comments Section -->
          <div class="comments-section">
            <h3>Komentar (${comments.length})</h3>
            
            <!-- Comment Form -->
            <div class="comment-form">
              <textarea id="comment-text" placeholder="Tulis komentar Anda..."></textarea>
              <button id="submit-comment" data-recipe-id="${recipeId}">Kirim Komentar</button>
            </div>
            
            <!-- Comments List -->
            <div class="comments-list">
              ${comments.map(comment => `
                <div class="comment" data-comment-id="${comment.id}">
                  <div class="comment-header">
                    <div class="comment-avatar">${comment.author.charAt(0)}</div>
                    <div>
                      <span class="comment-author">${comment.author}</span>
                      <span class="comment-date">${comment.date}</span>
                    </div>
                  </div>
                  <div class="comment-content">
                    ${comment.content}
                  </div>
                  <div class="comment-actions">
                    <button class="comment-action reply-btn" data-comment-id="${comment.id}">
                      <i class="fas fa-reply"></i> Balas
                    </button>
                  </div>
                  
                  <!-- Reply Form -->
                  <div class="reply-form" id="reply-form-${comment.id}">
                    <textarea placeholder="Tulis balasan..."></textarea>
                    <button class="submit-reply" data-comment-id="${comment.id}">Kirim Balasan</button>
                  </div>
                  
                  <!-- Replies -->
                  ${comment.replies && comment.replies.length > 0 ? `
                    <div class="replies">
                      ${comment.replies.map(reply => `
                        <div class="comment">
                          <div class="comment-header">
                            <div class="comment-avatar">${reply.author.charAt(0)}</div>
                            <div>
                              <span class="comment-author">${reply.author}</span>
                              <span class="comment-date">${reply.date}</span>
                            </div>
                          </div>
                          <div class="comment-content">
                            ${reply.content}
                          </div>
                        </div>
                      `).join('')}
                    </div>
                  ` : ''}
                </div>
              `).join('')}
            </div>
          </div>
        `;
        
        // Add event listeners for comment functionality
        document.getElementById('submit-comment').addEventListener('click', function() {
          const recipeId = this.getAttribute('data-recipe-id');
          const commentText = document.getElementById('comment-text').value.trim();
          
          if (commentText) {
            addComment(recipeId, commentText);
          }
        });
        
        document.querySelectorAll('.reply-btn').forEach(button => {
          button.addEventListener('click', function() {
            const commentId = this.getAttribute('data-comment-id');
            const replyForm = document.getElementById(`reply-form-${commentId}`);
            replyForm.classList.toggle('active');
          });
        });
        
        document.querySelectorAll('.submit-reply').forEach(button => {
          button.addEventListener('click', function() {
            const commentId = this.getAttribute('data-comment-id');
            const replyForm = document.getElementById(`reply-form-${commentId}`);
            const replyText = replyForm.querySelector('textarea').value.trim();
            
            if (replyText) {
              addReply(recipeId, commentId, replyText);
            }
          });
        });
        
        // Show recipe detail page
        document.querySelectorAll('.page-section').forEach(page => {
          page.classList.remove('active');
        });
        document.getElementById('recipe-detail').classList.add('active');
      }

      // Function to add a new comment
      function addComment(recipeId, commentText) {
        const commentsData = getCommentsData();
        const comments = commentsData[recipeId] || [];
        
        // Generate a simple ID based on timestamp
        const newCommentId = Date.now();
        
        const newComment = {
          id: newCommentId,
          author: "Pengguna", // In a real app, this would be the logged-in user
          content: commentText,
          date: new Date().toISOString().split('T')[0],
          replies: []
        };
        
        comments.unshift(newComment);
        commentsData[recipeId] = comments;
        saveCommentsData(commentsData);
        
        // Refresh the recipe detail view to show the new comment
        showRecipeDetail(recipeId);
      }

      // Function to add a reply to a comment
      function addReply(recipeId, commentId, replyText) {
        const commentsData = getCommentsData();
        const comments = commentsData[recipeId] || [];
        
        // Find the comment to reply to
        const commentIndex = comments.findIndex(comment => comment.id == commentId);
        
        if (commentIndex !== -1) {
          // Generate a simple ID based on timestamp
          const newReplyId = Date.now();
          
          const newReply = {
            id: newReplyId,
            author: "Pengguna", // In a real app, this would be the logged-in user
            content: replyText,
            date: new Date().toISOString().split('T')[0]
          };
          
          comments[commentIndex].replies.push(newReply);
          commentsData[recipeId] = comments;
          saveCommentsData(commentsData);
          
          // Refresh the recipe detail view to show the new reply
          showRecipeDetail(recipeId);
        }
      }

      // Function to show article detail
      function showArticleDetail(articleId) {
        const article = articlesData[articleId];
        if (!article) return;
        
        const articleDetailContent = document.getElementById('article-detail-content');
        articleDetailContent.innerHTML = `
          <div class="article-detail">
            <img src="${article.image}" alt="${article.title}" class="article-detail-image">
            <h1 class="article-detail-title">${article.title}</h1>
            <div class="article-detail-content">
              ${article.content}
            </div>
          </div>
        `;
        
        // Show article detail page
        document.querySelectorAll('.page-section').forEach(page => {
          page.classList.remove('active');
        });
        document.getElementById('article-detail').classList.add('active');
      }

      // Function to save recipe
      function saveRecipe(recipeId) {
        let savedRecipes = JSON.parse(localStorage.getItem('savedRecipes')) || [];
        
        if (!savedRecipes.includes(recipeId)) {
          savedRecipes.push(recipeId);
          localStorage.setItem('savedRecipes', JSON.stringify(savedRecipes));
          alert('Resep berhasil disimpan!');
        } else {
          alert('Resep sudah ada dalam daftar simpanan.');
        }
      }

      // Function to display saved recipes
      function displaySavedRecipes() {
        const savedRecipesContainer = document.getElementById('saved-recipes-container');
        const noSavedRecipes = document.getElementById('no-saved-recipes');
        const savedRecipes = JSON.parse(localStorage.getItem('savedRecipes')) || [];
        
        if (savedRecipes.length === 0) {
          noSavedRecipes.style.display = 'block';
          savedRecipesContainer.innerHTML = '';
          savedRecipesContainer.appendChild(noSavedRecipes);
          return;
        }
        
        noSavedRecipes.style.display = 'none';
        
        let savedRecipesHTML = '<div class="saved-recipes-grid">';
        
        savedRecipes.forEach(recipeId => {
          const recipe = recipesData[recipeId];
          if (recipe) {
            savedRecipesHTML += `
              <div class="saved-recipe-card" data-id="${recipeId}">
                <button class="remove-saved" onclick="removeSavedRecipe('${recipeId}')"><i class="fas fa-times"></i></button>
                <img src="${recipe.image.replace('600x400', '300x200')}" alt="${recipe.title}" class="recipe-image">
                <div class="recipe-content">
                  <h3 class="recipe-title">${recipe.title}</h3>
                  <p class="recipe-origin">${recipe.origin}</p>
                  <div class="recipe-meta">
                    <div class="recipe-rating">
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="${recipe.rating === 5 ? 'fas' : recipe.rating >= 4.5 ? 'fas fa-star-half-alt' : 'far'} fa-star"></i>
                      <span>(${recipe.rating}/5)</span>
                    </div>
                    <i class="fas fa-heart recipe-favorite active"></i>
                  </div>
                  <p class="recipe-description">${recipe.description}</p>
                  <div class="recipe-actions">
                    <button class="btn btn-primary view-recipe-saved">Lihat Resep</button>
                  </div>
                </div>
              </div>
            `;
          }
        });
        
        savedRecipesHTML += '</div>';
        savedRecipesContainer.innerHTML = savedRecipesHTML;
        
        // Add event listeners to view recipe buttons in saved recipes
        document.querySelectorAll('.view-recipe-saved').forEach(button => {
          button.addEventListener('click', function() {
            const recipeCard = this.closest('.saved-recipe-card');
            const recipeId = recipeCard.getAttribute('data-id');
            showRecipeDetail(recipeId);
          });
        });
      }

      // Function to remove saved recipe
      window.removeSavedRecipe = function(recipeId) {
        let savedRecipes = JSON.parse(localStorage.getItem('savedRecipes')) || [];
        savedRecipes = savedRecipes.filter(id => id !== recipeId);
        localStorage.setItem('savedRecipes', JSON.stringify(savedRecipes));
        displaySavedRecipes();
      };

      // Initialize comments when the page loads
      document.addEventListener('DOMContentLoaded', function() {
        initializeComments();
      });
    </script>
  </body>
